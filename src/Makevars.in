#  GNUMakefile
 
# Just a snippet to stop executing under other make(1) commands
# that won't understand these lines
ifneq (,)
This makefile requires GNU Make.
endif


bs_src=${wildcard boost_serialization/*.cpp} 
bs_objs=${bs_src:.cpp=.o}
	
pb_bundled=@pb_bundled@

PKG_CPPFLAGS =-DROUT @PKG_CPPFLAGS@ ${pb_cppflags} -Iboost_serialization
PKG_LIBS =${bs_objs} ${pb_objs} `${R_HOME}/bin/Rscript -e "flowCore:::LdFlags()"` @PKG_LIBS@ 


all: 	$(SHLIB) 

$(SHLIB): $(OBJECTS) $(bs_objs)


.PHONY: 	all clean 

clean:
		rm -f $(OBJECTS) $(bs_objs) $(SHLIB)
 
